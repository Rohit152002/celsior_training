@model DoctorList.Models.DoctorModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">Edit Doctor Information</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div class="form-group mb-3">
                            <label for="DoctorId" class="form-label">Doctor ID</label>
                            <input type="text" asp-for="Id" class="form-control" id="DoctorId" readonly />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="DoctorName" class="form-label">Doctor Name</label>
                            <input type="text" asp-for="Name" class="form-control" id="DoctorName" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" asp-for="Email" class="form-control" id="Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Phone" class="form-label">Phone</label>
                            <input type="tel" asp-for="Phone" class="form-control" id="Phone" required />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label>Current Image:</label>
                            <div>
                                <img src="@Model.Image" alt="Doctor Image" class="img-thumbnail" width="150" />
                            </div>
                        </div>

                        <!-- Option to upload a new image -->
                        <div class="form-group mb-4">
                            <label for="DoctorImage" class="form-label">Upload New Doctor Image (Optional)</label>
                            <input type="file" asp-for="Image" class="form-control" id="DoctorImage" accept="image/*" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" asp-route-id="@Model.Id"
                                class="btn btn-warning btn-block">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
