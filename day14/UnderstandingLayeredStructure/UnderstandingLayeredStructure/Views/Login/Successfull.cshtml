@model UnderstandingLayeredStructure.Models.User

@{
    ViewData["Title"] = "Login Successful";
}

<div class="container mt-5">
    <h1>@ViewBag.name</h1>
    <div class="alert alert-success text-center">
        <h4 class="alert-heading">Login Successful!</h4>
        <p>Welcome back, @Model.Name!</p>
        <hr>
        <p class="mb-0">Here are your details:</p>
        <ul class="list-group mt-3">
            <li class="list-group-item"><strong>ID:</strong> @Model.Id</li>
            <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
            <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
        </ul>
    </div>  
    <div class="text-center">
        <a href="/Home/Dashboard" class="btn btn-primary btn-lg">Go to Dashboard</a>
    </div>
</div>
